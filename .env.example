# ReinventingAI Infrastructure Environment Configuration

# Copy this file to .env and configure with actual values
# Never commit .env files to version control

# IMPORTANT: Generate a secure encryption key with: openssl rand -hex 32
# Then replace 'your_encryption_key_here' with the 64-character result

# n8n Service Configuration
N8N_ENCRYPTION_KEY=your_encryption_key_here
N8N_HOST=https://r2d2.reinventingai.com
WEBHOOK_URL=https://r2d2.reinventingai.com/webhook

# Container Settings
N8N_CONTAINER_NAME=n8n-gabe
N8N_EXTERNAL_PORT=5678
N8N_VOLUME_NAME=n8n_data_gabe

# Database Configuration
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# Environment Settings
GENERIC_TIMEZONE=America/New_York
NODE_ENV=production

# Security Settings
N8N_SECURE_COOKIE=true
N8N_PROTOCOL=https

# Feature Flags
N8N_DISABLE_UI=false
N8N_METRICS=false
N8N_PUBLIC_API_DISABLED=true

# MCP Server Configuration
GITHUB_TOKEN=your_github_token_here
OPENAI_API_KEY=your_openai_key_here
MCP_SERVER_PORT=3001

# Future Services
# GoHighLevel API Configuration
# GHL_API_KEY=
# GHL_LOCATION_ID=

# Cloudflare Tunnel Configuration
# CF_TUNNEL_TOKEN=
# CF_ACCOUNT_ID=